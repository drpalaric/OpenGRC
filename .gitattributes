# Auto detect text files and perform LF normalization
* text=auto

# TypeScript
*.ts text eol=lf
*.tsx text eol=lf

# JavaScript
*.js text eol=lf
*.jsx text eol=lf

# JSON
*.json text eol=lf

# YAML
*.yml text eol=lf
*.yaml text eol=lf

# Markdown
*.md text eol=lf

# Shell scripts
*.sh text eol=lf

# SQL
*.sql text eol=lf

# Terraform
*.tf text eol=lf
*.tfvars text eol=lf

# Docker
Dockerfile text eol=lf
*.dockerignore text eol=lf

# Git
.gitignore text eol=lf
.gitattributes text eol=lf
